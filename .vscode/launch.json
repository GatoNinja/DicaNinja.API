{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DicaNinja.API/bin/Debug/net6.0/DicaNinja.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DicaNinja.API",
            "stopAtEntry": false,
            "suppressJITOptimizations": true,
            "logging": {
                "elapsedTiming": true,
                "moduleLoad": false
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
